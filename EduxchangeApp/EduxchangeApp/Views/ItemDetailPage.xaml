<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduxchangeApp.Views.ItemDetailPage"
             Title="{Binding PublicationType}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Margin="10" Text="{Binding Title}" FontSize="Title"/>

        <Label Grid.Row="1" Margin="10" Text="{Binding Description}" FontSize="Medium"/>

        <Button Grid.Row="2" Text="Request/Help" VerticalOptions="End"/>
    </Grid>

</ContentPage>